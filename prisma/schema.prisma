// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model users {
    id       Int    @id @default(autoincrement())
    username String @unique
    email    String @unique
    password String
}

model shortlinks {
    id          Int    @id @default(autoincrement())
    uuid        String @unique
    link        String
    description String
}
